@{
    ViewData["Title"] = "Calculator";
}

<script>

    var flag = false;

    function Add(num) {
        if (flag && (num >= '0' && num <= '9')) {
            Clear();
            flag = false;
        }
        else {
            flag = false;
        }

        CalForm.Back.value += num;
    }

    function Calc() {
        try {
            if (CalForm.Back.value.indexOf("//") != -1) {
                alert("Invalid Equation.");
                Clear();
            }
            else
                CalForm.Back.value = eval(document.CalForm.Back.value);

        } catch (e) {
            alert("Invalid Equation.");
            Clear();
        }
        flag = true;
    }

    function Clear() {
        CalForm.Back.value = "";
    }

</script>


<div class="row">
    <div class="col-lg-4"></div>
    <div clsss="col-lg-4">

        <form name="CalForm" class="form-horizontal">
            <h2 class="text-center">Calculator</h2>
            <table align="center">
                <tr>
                    <td>
                        <input type="text" class="form-control text-right" placeholder="input" readOnly name="Back">
                    </td>
                </tr>
                <tr>
                    <td class="btn-group-lg">
                        <input type="button" value=" C " onclick="Clear()" class="btn btn-danger col-xs-3">
                        <input type="button" value=" ( " onclick="Add('(')" class="btn btn-default col-xs-3">
                        <input type="button" value=" ) " onclick="Add(')')" class="btn btn-default col-xs-3">
                        <input type="button" value=" % " onclick="Add('%')" class="btn btn-primary col-xs-3">
                    </td>
                </tr>
                <tr>
                    <td class="btn-group-lg">
                        <input type="button" value=" 7 " onclick="Add('7')" class="btn btn-default col-xs-3">
                        <input type="button" value=" 8 " onclick="Add('8')" class="btn btn-default col-xs-3">
                        <input type="button" value=" 9 " onclick="Add('9')" class="btn btn-default col-xs-3">
                        <input type="button" value=" + " onclick="Add('+')" class="btn btn-primary col-xs-3">
                    </td>
                </tr>
                <tr>
                    <td class="btn-group-lg">
                        <input type="button" value=" 4 " onclick="Add('4')" class="btn btn-default col-xs-3">
                        <input type="button" value=" 5 " onclick="Add('5')" class="btn btn-default col-xs-3">
                        <input type="button" value=" 6 " onclick="Add('6')" class="btn btn-default col-xs-3">
                        <input type="button" value=" - " onclick="Add('-')" class="btn btn-primary col-xs-3">
                    </td>
                </tr>
                <tr>
                    <td class="btn-group-lg">
                        <input type="button" value=" 1 " onclick="Add('1')" class="btn btn-default col-xs-3">
                        <input type="button" value=" 2 " onclick="Add('2')" class="btn btn-default col-xs-3">
                        <input type="button" value=" 3 " onclick="Add('3')" class="btn btn-default col-xs-3">
                        <input type="button" value=" * " onclick="Add('*')" class="btn btn-primary col-xs-3">
                    </td>
                </tr>
                <tr>
                    <td class="btn-group-lg">
                        <input type="button" value=" 0 " onclick="Add('0')" class="btn btn-default col-xs-3">
                        <input type="button" value=" . " onclick="Add('.')" class="btn btn-default col-xs-3">
                        <input type="button" value=" = " onclick="Calc()" class="btn btn-success col-xs-3">
                        <input type="button" value=" / " onclick="Add('/')" class="btn btn-primary col-xs-3">
                    </td>
                </tr>
            </table>
        </form>

    </div>
    <div class="col-lg-4"></div>
</div>