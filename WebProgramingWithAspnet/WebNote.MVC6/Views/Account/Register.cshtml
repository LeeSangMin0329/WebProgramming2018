@{
    ViewData["Title"] = "Sign-Up";
}

@model WebNote.MVC6.Models.User

<h2>Sign Up</h2>
<br />
<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="Id" placeholder="Write User ID" />
        <span class="text-danger" asp-validation-for="Id"></span>
    </div>

    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Write User Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Write User Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Accept</button>
    </div>
</form>