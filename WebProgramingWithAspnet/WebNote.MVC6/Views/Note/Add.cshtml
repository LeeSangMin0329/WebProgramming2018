@model WebNote.MVC6.Models.Note

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-horizontal" method="post" asp-controller="Note" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="Write Title" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control editor" rows="20" asp-for="Contents" placeholder="Contexts"></textarea>
                <span class="text-danger" asp-validation-for="Contents"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a class="btn btn-default" asp-controller="Note" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>