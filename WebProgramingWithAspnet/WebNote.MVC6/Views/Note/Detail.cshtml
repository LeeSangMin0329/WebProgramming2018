
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Title - @Model.Title</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>Title : </label>
                @Model.Title
            </div>
            <div class="panel-body">
                @Html.Raw(Model.Contents)
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-primary" asp-controller="Note" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>